<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_tiny"
    android:padding="10dp"
    android:layout_margin="20dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/idOrder"
            android:text="Đơn hàng: "
            app:layout_constraintRight_toLeftOf="@+id/statusOrder"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/descriptionOrder"
            app:layout_constraintRight_toLeftOf="@+id/statusOrder"
            android:text="Samsung Smart TV QLED QA43Q60T---Số lượng: 5,
Smart Tivi TCL 4K 65 inch L65P65-UF---Số lượng: 10,
Android Tivi TCL 32 inch L32S66A---Số lượng: 2,
Android Tivi TCL 32 inch 32S6500---Số lượng: 1,
...END..."
            app:layout_constraintTop_toBottomOf="@+id/idOrder"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@color/color_main"
        android:text="Tình trạng đơn hàng"
        android:id="@+id/statusOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>